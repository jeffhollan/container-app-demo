{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "pip install",
            "command": "pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/python-service"
            }
        },
        {
            "type": "shell",
            "label": "npm install",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/node-service"
            }
        },
        {
            "type": "shell",
            "label": "go install",
            "command": "go install",
            "options": {
                "cwd": "${workspaceFolder}/go-service"
            }
        },
        {
            "appId": "go-app",
            "appPort": 8050,
            "label": "daprd-debug-go",
            "httpPort": 3500,
            "metricsPort": 9090,
            "grpcPort": 50001,
            "type": "daprd"
        },
        {
            "appId": "go-app",
            "label": "daprd-down-go",
            "type": "daprd-down"
        }
    ]
}