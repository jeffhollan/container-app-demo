extends layout

block content
  h1= title
  p Welcome to #{title}
  br

  h2= 'Create new order'
  br
  br
  form(action='/order', method='post')
    div.input
      span.label Id
      input(type='text', name='id', placeholder='foo', required='required')
    div.input
      span.label Item
      input(type='text', name='item', placeholder='Widget', required='required')
    div.actions
      input(type='submit', value='Create')